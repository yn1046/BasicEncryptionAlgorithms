<Window x:Class="BasicEncryptionAlgorithms.ColumnalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasicEncryptionAlgorithms"
        mc:Ignorable="d"
        Title="ColumnalWindow" Height="340" Width="400">
    <Grid>
        <TextBlock Margin="10,10,10,196" TextWrapping="Wrap" Text="{Binding TextMatrix}"/>
        <TextBlock Margin="10,118,10,0" TextWrapping="Wrap" Text="{Binding OutputText}" VerticalAlignment="Top" Height="29"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,0,0,111" TextWrapping="Wrap" Text="{Binding Model.Key}" VerticalAlignment="Bottom" Width="126"/>
        <TextBox Height="23" Margin="10,0,10,83" TextWrapping="Wrap" Text="{Binding Model.InputText}" VerticalAlignment="Bottom"/>
        <Button Content="Encrypt" Command="{Binding DoEncrypt}" HorizontalAlignment="Left" Margin="10,0,0,10" Width="157" Height="33" VerticalAlignment="Bottom"/>
        <Button Content="Decrypt" Command="{Binding DoDecrypt}" Margin="0,0,10,10" Height="33" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="157"/>

    </Grid>
</Window>
